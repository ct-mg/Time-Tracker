{
  "$schema": "./manifest.schema.json",
  "name": "Extension Boilerplate",
  "key": "extension-boilerplate",
  "version": "1.0.0",
  "description": "A boilerplate extension demonstrating ChurchTools extension capabilities",
  "author": {
    "name": "Your Name",
    "email": "your.email@example.com",
    "url": "https://your-website.com"
  },
  "homepage": "https://github.com/yourname/extension-boilerplate",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourname/extension-boilerplate.git"
  },
  "license": "MIT",
  "icon": "https://your-website.com/extension-icon.png",
  "images": ["https://your-website.com/screenshot1.png"],
  "extensionPoints": [
    {
      "id": "main",
      "entryPoint": "main",
      "title": "Statistics Dashboard",
      "description": "Person statistics by status"
    },
    {
      "id": "admin",
      "entryPoint": "admin",
      "title": "Extension Settings",
      "description": "Configure extension settings"
    },
    {
      "id": "appointment-dialog-detail",
      "entryPoint": "appointmentDetails",
      "title": "Appointment Details",
      "description": "Shows appointment as json in appointment dialog"
    }
  ],
  "permissions": [
    "churchcal view",
    "churchdb view"
  ],
  "minChurchToolsVersion": "3.0.0"
}
