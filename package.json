{
    "name": "extension-boilerplate",
    "private": true,
    "version": "2.0.0",
    "type": "module",
    "scripts": {
        "clean": "rm -rf dist",
        "dev": "vite",
        "dev:legacy": "vite --config vite.config.legacy.ts",
        "build": "tsc && vite build",
        "build:simple": "VITE_BUILD_MODE=simple npm run build",
        "build:advanced": "VITE_BUILD_MODE=advanced npm run build",
        "build:legacy": "tsc && vite build --config vite.config.legacy.ts",
        "preview": "vite preview",
        "deploy": "npm run clean && npm run build && node scripts/package.js",
        "deploy:simple": "npm run clean &&  VITE_BUILD_MODE=simple npm run build && node scripts/package.js",
        "deploy:advanced": "npm run clean &&  VITE_BUILD_MODE=advanced npm run build && node scripts/package.js",
        "deploy:legacy": "npm run clean && npm run build:legacy && node scripts/package.js",
        "lint": "eslint src --ext .ts",
        "lint:fix": "eslint src --ext .ts --fix",
        "format": "prettier --write \"src/**/*.ts\"",
        "format:check": "prettier --check \"src/**/*.ts\"",
        "test": "vitest",
        "test:run": "vitest run",
        "test:ui": "vitest --ui",
        "test:coverage": "vitest run --coverage"
    },
    "dependencies": {
        "@churchtools/extension-points": "github:churchtools/churchtools-extension-points",
        "xlsx": "^0.18.5"
    },
    "devDependencies": {
        "@churchtools/churchtools-client": "^1.4.0",
        "@eslint/js": "^9.39.1",
        "@testing-library/dom": "^10.4.1",
        "@types/node": "^24.3.0",
        "@typescript-eslint/eslint-plugin": "^8.48.0",
        "@typescript-eslint/parser": "^8.48.0",
        "@vitest/coverage-istanbul": "^4.0.14",
        "@vitest/ui": "^4.0.14",
        "eslint": "^9.39.1",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-prettier": "^5.5.4",
        "happy-dom": "^20.0.11",
        "jsdom": "^27.2.0",
        "prettier": "^3.7.2",
        "typescript": "^5.9.2",
        "typescript-eslint": "^8.48.0",
        "vite": "^7.1.2",
        "vitest": "^4.0.14"
    }
}