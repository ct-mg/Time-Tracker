{
    "name": "extension-boilerplate",
    "private": true,
    "version": "0.0.1",
    "type": "module",
    "scripts": {
        "clean": "rm -rf dist",
        "dev": "vite",
        "dev:legacy": "vite --config vite.config.legacy.ts",
        "build": "vue-tsc --noEmit && vite build",
        "build:simple": "VITE_BUILD_MODE=simple npm run build",
        "build:advanced": "VITE_BUILD_MODE=advanced npm run build",
        "build:legacy": "vue-tsc --noEmit && vite build --config vite.config.legacy.ts",
        "preview": "vite preview",
        "deploy": "npm run clean && npm run build && node scripts/package.js",
        "deploy:simple": "npm run clean &&  VITE_BUILD_MODE=simple npm run build && node scripts/package.js",
        "deploy:advanced": "npm run clean &&  VITE_BUILD_MODE=advanced npm run build && node scripts/package.js",
        "deploy:legacy": "npm run clean && npm run build:legacy && node scripts/package.js",
        "lint": "eslint src --ext .ts",
        "lint:fix": "eslint src --ext .ts --fix",
        "format": "prettier --write \"src/**/*.ts\"",
        "format:check": "prettier --check \"src/**/*.ts\"",
        "test": "vitest",
        "test:run": "vitest run",
        "test:ui": "vitest --ui",
        "test:coverage": "vitest run --coverage"
    },
    "dependencies": {
        "@churchtools/extension-points": "github:churchtools/churchtools-extension-points",
        "pinia": "^3.0.4",
        "vue": "^3.5.26",
        "xlsx": "^0.18.5"
    },
    "devDependencies": {
        "@churchtools/churchtools-client": "^1.4.0",
        "@eslint/js": "^9.39.1",
        "@testing-library/dom": "^10.4.1",
        "@types/node": "^24.3.0",
        "@typescript-eslint/eslint-plugin": "^8.48.0",
        "@typescript-eslint/parser": "^8.48.0",
        "@vitejs/plugin-vue": "^6.0.3",
        "@vitest/coverage-istanbul": "^4.0.14",
        "@vitest/ui": "^4.0.14",
        "@vue/test-utils": "^2.4.6",
        "autoprefixer": "^10.4.23",
        "eslint": "^9.39.1",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-prettier": "^5.5.4",
        "happy-dom": "^20.0.11",
        "jsdom": "^27.2.0",
        "postcss": "^8.5.6",
        "prettier": "^3.7.2",
        "tailwindcss": "^3.4.17",
        "typescript": "^5.9.2",
        "typescript-eslint": "^8.48.0",
        "vite": "^7.1.2",
        "vitest": "^4.0.14",
        "vue-tsc": "^3.2.1"
    }
}
